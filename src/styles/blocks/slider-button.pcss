.slider-button {
  height: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.slider-buttons__item--slide--prev, .slider-buttons__item--slide--next {
  width: 100%;
  height: 100%;
  background-color: transparent;
  color: #fff;

  &:hover {
    background-color: #ff9a00;
  }
}
