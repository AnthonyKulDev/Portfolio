.slider {
  height: 100%;
  position: relative;
  @include tablets {
    margin-bottom: 60px;
  }
}

.slider__preview {
  position: absolute;
  right: 0;
  bottom: 10%;
}

.slider__buttons {
  width: 50px;
  height: 100px;
  background-color: #353e4e;
  position: absolute;
  left: 100%;
  bottom: 10%;
  @include phones {
    left: unset;
    right: 0;
    bottom: 0;
  }
}

.slider__fillpic {
  width: 100%;
  height: 100%;
}