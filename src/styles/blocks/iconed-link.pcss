.iconed-link {
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: bold;
  color: #586fd3;

  &:hover {
    text-decoration: underline;
  }

  @include tablets {
    justify-content: center;
  }
  @include phones {
    justify-content: flex-start;
  }
}

.iconed-link__icon {
  width: 15px;
  height: 15px;
  fill: #586fd3;
  margin-right: 20px;
}