.nav {
  font-size: 16px;
  color: #fff;
}

.nav__list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.nav__item {
  margin-right: 60px;

  @include tablets {
    margin-right: 70px;
    margin-bottom: 20px;
  }

  &:last-child {
    margin-right: 0;
  }
  &:hover {
    color: #ff9a00;
  }
}