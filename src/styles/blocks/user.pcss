.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user__avatar {
  margin-bottom: 80px;
  @include phones {
    margin-bottom: 30px;
  }
}

.user__desc {
  width: 100%;
  @include phones {
    margin-bottom: 50px;
  }
} 
 
.user__desc-item {
  display: flex;
  margin-bottom: 30px;
  &:last-child {
    margin-bottom: 0;
  }
}

.user__value {
  color: #fff;
  width: 30%;
}

.user__key {
  color: #3f4245;
  width: 70%;
}  