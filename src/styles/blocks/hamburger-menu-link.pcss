.hamburger-menu-link {
  vertical-align: middle;
	align-items: center;
	position: relative;
	height: 22px;
	margin-left: 100px;
	display: none;

	@include tablets {
		display: flex;
	}
}

.hamburger-menu-link__bars {
	&, &:before, &:after {
		background: #fff;
		width: 27px;
		height: 5px;
	}

	&:before, &:after {
		content: "";
		display: block;
		position: absolute;
	}

	&:before {
		top: 0;
	}

	&:after {
		bottom: 0;
	}
}